{
	"name": "jupyter-notebook",
	"build": {
		"dockerfile": "./Dockerfile",
		"context": "../"
	},
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"donjayamanne.githistory",
		"eamodio.gitlens",
		"mutantdino.resourcemonitor",
		"github.copilot",
	],
	"postCreateCommand": "micromamba activate && python -m pip install -e \".[dev,test]\" && jlpm && jlpm run build && jlpm develop && jupyter server extension enable notebook",
	"postStartCommand": "micromamba activate && jupyter notebook --no-browser --JupyterNotebookApp.token='' --JupyterNotebookApp.allow_origin=* --JupyterNotebookApp.tornado_settings='{\"headers\": {\"Content-Security-Policy\": \"frame-ancestors *\"}}'",
	"forwardPorts": [
		8888
	],
	"settings": {
		"telemetry.enableTelemetry": false,
		"files.exclude": {
			"**/__pycache__": true,
			"**/*.egg-info": true,
			"**/.ipynb_checkpoints": true,
		},
		"python.linting.pylintEnabled": false,
		"python.linting.pydocstyleEnabled": false,
		"python.linting.flake8Enabled": true,
		"python.linting.flake8Args": [
			"--max-line-length=88",
			// Let black handle formatting: <https://stackoverflow.com/q/59241007>
			// Also exclude isort stuff: <https://stackoverflow.com/a/69396215>
			// But don't exclude E5 for line length
			"--extend-ignore=E101,E111,E114,E115,E116,E117,E12,E13,E2,E3,E401,E70,W1,W2,W3,W5,E4,W4",
		],
		// Turn on "black" for automatic code formatting
		"python.formatting.provider": "black",
		"editor.rulers": [
			88
		],
		"workbench.editor.wrapTabs": true,
		"python.languageServer": "Pylance",
		"python.analysis.typeCheckingMode": "basic",
		"python.sortImports.args": [
			"--profile=black",
			"--src",
			"${workspaceFolder}"
		], // <https://github.com/microsoft/vscode-python/issues/14254#issuecomment-708151872>
		// Interpret lines beginning with "# !%" as ipython magic commands
		"jupyter.magicCommandsAsComments": true,
		"python.pythonPath": "${HOME}/micromamba/bin/python",
	},
}
